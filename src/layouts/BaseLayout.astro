---
import Link from "../components/Link.astro";

const { title = "default" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <Link href="/">Home</Link>
      <a href="/about">About</a>
    </nav>
    <main>
      <slot name="content" />
      <slot />
    </main>
  </body>
</html>
