---
import PostItem from "@/components/posts/PostItem.astro";
import AstroPagination from "@/components/ui/pagination/AstroPagination.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";

export const getStaticPaths = (async ({ paginate }) => {
  const posts = (await getCollection("posts"))
    .toSorted((a, b) => a.data.slug.localeCompare(b.data.slug));
  return paginate(posts, { pageSize: 2 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---

<BaseLayout title={"Posts"}>
  <AstroPagination page={page} class="mb-8" />
  <ul class="grid gap-8 grid-cols-[repeat(auto-fit,minmax(300px,1fr))]">
    {page.data.map(post => (
      <li>
        <PostItem {...post} />
      </li>
    ))}
  </ul>
</BaseLayout>
